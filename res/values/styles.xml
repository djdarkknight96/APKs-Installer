<resources>
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverflow</item>
    </style>
    <style name="MyActionBar"
        parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_solid_dark_holo</item>
        <item name="android:displayOptions"></item>
    </style>
    <style name="MyOverflow" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_normal_holo_dark</item>
    </style>
</resources>
